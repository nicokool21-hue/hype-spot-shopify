[
  {
    "name": "theme_info",
    "theme_name": "Hype Spot",
    "theme_version": "1.0.0",
    "theme_author": "Hype Spot",
    "theme_documentation_url": "https://github.com/yourusername/hype-spot-theme",
    "theme_support_url": "mailto:hypespotclient@gmail.com"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color scheme"
      },
      {
        "type": "color",
        "id": "colors_text",
        "default": "#121212",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "colors_background",
        "default": "#FFFFFF",
        "label": "Background color"
      },
      {
        "type": "color",
        "id": "color_accent",
        "default": "#FB923C",
        "label": "Accent color",
        "info": "Used for buttons, links, and highlights"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font",
        "info": "Used for headings and titles"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body font",
        "info": "Used for body text"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body font size",
        "default": 100
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading font size",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Page width"
      },
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      }
    ]
  },
  {
    "name": "Product cards",
    "settings": [
      {
        "type": "header",
        "content": "Product card settings"
      },
      {
        "type": "select",
        "id": "card_style",
        "options": [
          {
            "value": "standard",
            "label": "Standard"
          },
          {
            "value": "card",
            "label": "Card"
          }
        ],
        "default": "standard",
        "label": "Style"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "default": false,
        "label": "Show vendor"
      },
      {
        "type": "checkbox",
        "id": "show_rating",
        "default": false,
        "label": "Show product rating",
        "info": "To display a rating, add a product rating app. [Learn more](https://help.shopify.com/manual/online-store/themes/theme-structure/page-types#product-rating)"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://www.facebook.com/hypespotstore"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://www.instagram.com/hypespotstore"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/hypespotstore"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
]
