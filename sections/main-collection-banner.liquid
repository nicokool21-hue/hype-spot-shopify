{{ 'section-collection-banner.css' | asset_url | stylesheet_tag }}

<div class="collection-hero">
  <div class="collection-hero__inner page-width">
    {%- if collection.image -%}
      <div class="collection-hero__image">
        {{ collection.image | image_url: width: 1500 | image_tag: loading: 'lazy', widths: '550, 720, 990, 1100, 1500' }}
      </div>
    {%- endif -%}
    
    <div class="collection-hero__content">
      <h1 class="collection-hero__title">{{ collection.title }}</h1>
      
      {%- if section.settings.show_collection_description and collection.description != blank -%}
        <div class="collection-hero__description">
          {{ collection.description }}
        </div>
      {%- endif -%}
      
      {%- if collection.all_products_count > 0 -%}
        <p class="collection-hero__count">
          {{ 'templates.collection.products' | t }}: {{ collection.all_products_count }}
        </p>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "Show collection description"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "Show collection image"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ]
}
{% endschema %}
