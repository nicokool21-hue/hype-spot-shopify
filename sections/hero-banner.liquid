{% comment %}
  Premium Hero Banner - Hype Spot
  Converted from React to Shopify Liquid with animations
{% endcomment %}

<section class="hero-section">
  <!-- Animated Background Elements -->
  <div class="hero-bg">
    <div class="hero-bg__circle hero-bg__circle--1"></div>
    <div class="hero-bg__circle hero-bg__circle--2"></div>
  </div>

  <div class="hero-container">
    <div class="hero-grid">
      <!-- Text Content -->
      <div class="hero-content">
        <h1 class="hero-title">
          Descubre el 
          <span class="hero-title--gradient">futuro</span>
          <br />
          del estilo
        </h1>

        <p class="hero-description">
          Tecnología premium, diseño excepcional. Encuentra los productos más innovadores en un solo lugar.
        </p>

        <div class="hero-buttons">
          <a href="#productos" class="hero-btn hero-btn--primary">
            Explorar productos
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
          <a href="/collections/all" class="hero-btn hero-btn--outline">
            Ver colecciones
          </a>
        </div>
      </div>

      <!-- Product Showcase -->
      <div class="hero-showcase">
        <div class="hero-showcase__wrapper">
          <!-- Main Product -->
          <div class="hero-product hero-product--main">
            <img 
              src="https://images.unsplash.com/photo-1546868871-7041f2a55e12?w=800&q=80" 
              alt="Premium Smartwatch"
              loading="eager"
            />
          </div>

          <!-- Secondary Product - Top Right -->
          <div class="hero-product hero-product--top">
            <img 
              src="https://images.unsplash.com/photo-1572635196237-14b3f281503f?w=400&q=80" 
              alt="Premium Sunglasses"
              loading="lazy"
            />
          </div>

          <!-- Tertiary Product - Bottom Left -->
          <div class="hero-product hero-product--bottom">
            <img 
              src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=400&q=80" 
              alt="Premium Headphones"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #F9FAFB 0%, #E5E7EB 50%, #F3F4F6 100%);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .hero-bg__circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float 8s ease-in-out infinite;
  }

  .hero-bg__circle--1 {
    top: 5rem;
    left: 5rem;
    width: 18rem;
    height: 18rem;
    background: linear-gradient(135deg, rgba(251, 146, 60, 0.2), transparent);
    animation-duration: 8s;
  }

  .hero-bg__circle--2 {
    bottom: 5rem;
    right: 5rem;
    width: 24rem;
    height: 24rem;
    background: linear-gradient(135deg, rgba(156, 163, 175, 0.2), transparent);
    animation-duration: 10s;
    animation-delay: 1s;
  }

  @keyframes float {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.5;
    }
  }

  .hero-container {
    position: relative;
    z-index: 10;
    max-width: 1280px;
    margin: 0 auto;
    padding: 5rem 1rem;
    width: 100%;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: center;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .hero-title--gradient {
    background: linear-gradient(135deg, #FB923C, #EA580C);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.125rem;
    color: #6B7280;
    margin-bottom: 2rem;
    font-weight: 300;
    max-width: 36rem;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
  }

  .hero-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    height: 3rem;
  }

  .hero-btn--primary {
    background: #111827;
    color: white;
  }

  .hero-btn--primary:hover {
    background: #1F2937;
    transform: translateY(-2px);
  }

  .hero-btn--outline {
    background: transparent;
    color: #111827;
    border: 1px solid #E5E7EB;
  }

  .hero-btn--outline:hover {
    border-color: #FB923C;
    color: #FB923C;
  }

  .hero-showcase {
    position: relative;
    animation: fadeInScale 1s ease-out 0.3s both;
  }

  .hero-showcase__wrapper {
    position: relative;
  }

  .hero-product {
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08), 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .hero-product img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-product--main {
    position: relative;
    z-index: 10;
    aspect-ratio: 1;
    animation: floatMain 6s ease-in-out infinite;
  }

  .hero-product--top {
    position: absolute;
    top: -2rem;
    right: -2rem;
    width: 12rem;
    height: 12rem;
    animation: floatTop 5s ease-in-out infinite 0.5s;
  }

  .hero-product--bottom {
    position: absolute;
    bottom: -2rem;
    left: -2rem;
    width: 14rem;
    height: 14rem;
    animation: floatBottom 7s ease-in-out infinite 1s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes floatMain {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes floatTop {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(15px) rotate(5deg); }
  }

  @keyframes floatBottom {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(-5deg); }
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
    }

    .hero-content {
      text-align: left;
    }

    .hero-title {
      font-size: 4.5rem;
    }

    .hero-description {
      margin-left: 0;
    }

    .hero-buttons {
      flex-direction: row;
      justify-content: flex-start;
    }
  }

  @media (min-width: 640px) {
    .hero-title {
      font-size: 3.75rem;
    }

    .hero-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Descubre el futuro del estilo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Tecnología premium, diseño excepcional. Encuentra los productos más innovadores en un solo lugar."
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
