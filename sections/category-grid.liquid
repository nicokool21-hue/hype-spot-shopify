        </div>
      </a>
    </div>
  </div>
</section>

<style>
  .category-section {
    padding: 5rem 0;
    background: #FFFFFF;
  }

  .category-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .category-header {
    text-align: center;
    margin-bottom: 3rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .category-title {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .category-description {
    font-size: 1.125rem;
    color: #6B7280;
    font-weight: 300;
  }

  .category-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .category-card {
    display: block;
    text-decoration: none;
    color: inherit;
    animation: fadeInUp 0.6s ease-out;
    transition: transform 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-8px);
  }

  .category-card__image {
    position: relative;
    height: 16rem;
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(229, 231, 235, 0.5);
    transition: border-color 0.3s ease;
  }

  .category-card:hover .category-card__image {
    border-color: rgba(251, 146, 60, 0.5);
  }

  .category-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .category-card:hover .category-card__image img {
    transform: scale(1.1);
  }

  .category-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  }

  .category-card__content {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    right: 1rem;
    color: white;
  }

  .category-card__icon {
    display: inline-flex;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .category-card__title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .category-card__desc {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 768px) {
    .category-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .category-title {
      font-size: 3rem;
    }
  }
</style>

